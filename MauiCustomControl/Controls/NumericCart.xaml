<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:MauiCustomControl.Controls"
             x:Class="MauiCustomControl.Controls.NumericCart">
    <HorizontalStackLayout Spacing="10">
        <ImageButton x:Name="imgBtnPlus" 
                     Clicked="imgBtnPlus_Clicked"
                     IsEnabled="true"
                     Source="plus.png"
                     HeightRequest="10" />
        <Entry x:Name="txValue" 
               TextChanged="txValue_TextChanged"
               Keyboard="Numeric"
               MaxLength="3"
               Text="0" 
               HorizontalTextAlignment="Center" />
        <ImageButton x:Name="imgBtnMinus" 
                     Clicked="imgBtnMinus_Clicked"
                     IsEnabled="False"
                     Source="minus.png"
                     HeightRequest="10"/>
        <ImageButton x:Name="imgBtnCart" 
                     Clicked="imgBtnCart_Clicked"
                     IsEnabled="False"
                     HeightRequest="10"
                     Source="in_den_warenkorb_legen.png"/>
    </HorizontalStackLayout>
</ContentView>