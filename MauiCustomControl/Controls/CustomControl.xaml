<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:MauiCustomControl.Controls"
             x:Class="MauiCustomControl.Controls.CustomControl">
    <VerticalStackLayout x:Name="grid" HeightRequest="160" VerticalOptions="Start">
        <Image x:Name="imgImage" Aspect="AspectFit" Margin="10"
               Source="basketball.png"
               HeightRequest="100"
               HorizontalOptions="Center"/>

        <Label x:Name="laTitle"
               Text="BASKETBALL"
               Grid.Row="1" 
               FontSize="20"
               TextColor="White"
               HorizontalOptions="Center" 
               FontAttributes="Bold"/>
    </VerticalStackLayout>
</ContentView>
