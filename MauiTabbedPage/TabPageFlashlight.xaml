<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiTabbedPage.TabPageFlashlight"
             Title="TabPage Flashlight">
    <VerticalStackLayout>
        <Label 
            Text=".NET MAUI Flashlight Demo!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" FontSize="Large" TextColor="DarkBlue" />
        <HorizontalStackLayout HorizontalOptions="Center">
            <Label Text="Taschenlampe" VerticalOptions="Center" />
            <Switch x:Name="switchFlashlight" IsToggled="False" Toggled="switchFlashlight_Toggled" />
        </HorizontalStackLayout>
    </VerticalStackLayout>

</ContentPage>